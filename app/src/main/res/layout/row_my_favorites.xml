<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="150dp" app:srcCompat="@drawable/zebra"
            android:id="@+id/row_my_favorites_imageview" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:scaleType="centerCrop"/>
    <TextView
            android:text="שם אירוע"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:gravity="right"
            android:textSize="24sp"
            android:id="@+id/row_my_favorites_title_textview"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/row_my_favorites_imageview" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="תיאור"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:gravity="right"
            android:id="@+id/row_my_favorites_description" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/row_my_favorites_title_textview"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>