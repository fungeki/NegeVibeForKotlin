<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="rtl"
        tools:context=".Fragments.AddMyEventFragment">

    <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                app:contentScrim="?attr/colorPrimary"
                android:background="@color/colorWhite"
                app:expandedTitleTextAppearance="@android:color/transparent"
                android:fitsSystemWindows="false">
            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageView
                        android:id="@+id/addEventImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/add_picture"
                        android:scaleType="centerCrop"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_collapseMode="parallax"/>


                <android.support.v7.widget.Toolbar
                        android:layout_width="wrap_content"
                        android:layout_height="?attr/actionBarSize"
                        app:layout_collapseMode="pin"
                        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" tools:layout_editor_absoluteY="0dp"
                        tools:layout_editor_absoluteX="0dp"/>
            </android.support.constraint.ConstraintLayout>


        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp">
        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:id="@+id/containerForEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:orientation="vertical"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">
                    <EditText
                            android:id="@+id/addEventNameOfEvent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_edit_text"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/eventNameHebrew"
                            android:textColor="@color/colorBlue"
                            android:paddingEnd="220dp"
                            android:paddingStart="20dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"/>
                    <EditText
                            android:id="@+id/addEventMyEventDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorWhite"
                            android:hint="@string/eventDescriptionHebrew"
                            android:paddingBottom="80dp"
                            android:paddingTop="10dp"
                            android:paddingStart="10dp"/>
                    <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorGrayBackground"
                            android:hint="@string/smallCharactersHedrew"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:paddingStart="10dp"/>
                    <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/colorPrimary">
                        <android.support.constraint.Guideline
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                app:layout_constraintGuide_percent="0.16"
                                android:id="@+id/guideLineVertical2"/>

                        <android.support.constraint.Guideline
                                android:layout_width="0dp"
                                android:id="@+id/guideLineVertical"
                                app:layout_constraintGuide_percent="0.05"
                                android:layout_height="match_parent"
                                android:orientation="vertical"/>
                        <android.support.constraint.Guideline
                                android:layout_width="0dp"
                                android:id="@+id/guideLineVertical3"
                                app:layout_constraintGuide_percent="0.57"
                                android:layout_height="match_parent"
                                android:orientation="vertical"/>

                        <android.support.constraint.Guideline
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:orientation="horizontal"
                                android:id="@+id/guideLineHorizontal"
                                app:layout_constraintGuide_percent="0.13"/>
                        <android.support.constraint.Guideline
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:orientation="horizontal"
                                android:id="@+id/guideLineHorizontal2"
                                app:layout_constraintGuide_percent="0.23"/>
                        <android.support.constraint.Guideline
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:orientation="horizontal"
                                android:id="@+id/guideLineHorizontal3"
                                app:layout_constraintGuide_percent="0.35"/>
                        <android.support.constraint.Guideline
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:orientation="horizontal"
                                android:id="@+id/guideLineHorizontal4"
                                app:layout_constraintGuide_percent="0.45"/>
                        <android.support.constraint.Guideline
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:orientation="horizontal"
                                android:id="@+id/guideLineHorizontal5"
                                app:layout_constraintGuide_percent="0.55"/>
                        <android.support.constraint.Guideline
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:orientation="horizontal"
                                android:id="@+id/guideLineHorizontal6"
                                app:layout_constraintGuide_percent="0.65"/>
                        <android.support.constraint.Guideline
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:orientation="horizontal"
                                android:id="@+id/guideLineHorizontal7"
                                app:layout_constraintGuide_percent="0.72"/>
                        <android.support.constraint.Guideline
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:orientation="horizontal"
                                android:id="@+id/guideLineHorizontal8"
                                app:layout_constraintGuide_percent="0.85"/>

                        <Spinner
                                android:id="@+id/addEventCategorySpinner"
                                android:layout_width="0dp"
                                android:layout_height="35dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="24dp"
                                android:spinnerMode="dropdown"
                                android:background="@drawable/spinner_style"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toEndOf="@id/guideLineVertical2"/>


                        <ImageView
                                android:layout_width="24dp"
                                android:layout_height="0dp"
                                android:src="@drawable/ic_category_blue"
                                android:id="@+id/addEventCategoryImage"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/guideLineVertical"/>

                        <EditText
                                android:layout_width="0dp"
                                android:layout_height="35dp"
                                android:hint="יום ה, 24 בינואר 2019"
                                android:background="@drawable/rounded_edit_text"
                                android:id="@+id/addEventDate"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginEnd="24dp"
                                android:paddingStart="20dp"
                                app:layout_constraintStart_toEndOf="@id/guideLineVertical2"
                                app:layout_constraintTop_toBottomOf="@+id/guideLineHorizontal"/>
                        <ImageView
                                android:layout_width="24dp"
                                android:layout_height="28dp"
                                android:src="@drawable/ic_date_red"
                                android:id="@+id/addEventCaledarImage"
                                app:layout_constraintTop_toBottomOf="@id/guideLineHorizontal"
                                app:layout_constraintStart_toEndOf="@+id/guideLineVertical"/>


                        <EditText
                                android:id="@+id/addEventLocationEditText"
                                android:layout_width="0dp"
                                android:layout_height="35dp"
                                app:layout_constraintTop_toBottomOf="@id/guideLineHorizontal2"
                                app:layout_constraintStart_toEndOf="@id/guideLineVertical2"
                                android:hint="מיצי"
                                android:background="@drawable/rounded_edit_text"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:paddingStart="20dp"
                                android:layout_marginEnd="24dp"/>
                        <ImageView
                                android:layout_width="24dp"
                                android:layout_height="28dp"
                                app:layout_constraintStart_toEndOf="@id/guideLineVertical"
                                app:layout_constraintTop_toBottomOf="@id/guideLineHorizontal2"
                                android:src="@drawable/ic_address_green"/>
                        <EditText
                                android:id="@+id/addEventLocationDescriptionEditText"
                                android:layout_width="0dp"
                                android:layout_height="35dp"
                                app:layout_constraintTop_toBottomOf="@id/guideLineHorizontal3"
                                app:layout_constraintStart_toEndOf="@id/guideLineVertical2"
                                android:hint="תאור של המקום"
                                android:background="@drawable/rounded_edit_text"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:paddingStart="20dp"
                                android:layout_marginEnd="24dp" tools:ignore="HardcodedText"
                                app:layout_constraintHorizontal_bias="1.0"/>
                        <ImageView
                                android:layout_width="24dp"
                                android:layout_height="28dp"
                                app:layout_constraintStart_toEndOf="@id/guideLineVertical"
                                app:layout_constraintTop_toBottomOf="@id/guideLineHorizontal3"
                                android:src="@drawable/ic_address_description_yellow"/>


                        <EditText
                                android:id="@+id/addEventTimeEditText"
                                android:layout_width="0dp"
                                android:layout_height="35dp"
                                app:layout_constraintTop_toBottomOf="@id/guideLineHorizontal4"
                                app:layout_constraintStart_toEndOf="@id/guideLineVertical2"
                                android:hint="@string/hoursHebrew"
                                android:background="@drawable/rounded_edit_text"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:paddingStart="20dp"
                                android:layout_marginEnd="24dp"/>
                        <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                app:layout_constraintStart_toEndOf="@id/guideLineVertical"
                                app:layout_constraintTop_toBottomOf="@id/guideLineHorizontal4"
                                android:src="@drawable/ic_time_purple"/>


                        <EditText
                                android:id="@+id/addEventTicketPriceEditText"
                                android:layout_width="0dp"
                                android:layout_height="35dp"
                                app:layout_constraintTop_toBottomOf="@id/guideLineHorizontal5"
                                app:layout_constraintStart_toEndOf="@id/guideLineVertical2"
                                android:hint="@string/priceHebrew"
                                android:textAlignment="center"
                                android:background="@drawable/rounded_edit_text"
                                app:layout_constraintEnd_toEndOf="@id/guideLineVertical3"
                                android:paddingStart="17dp"
                                android:layout_marginEnd="24dp"/>
                        <Button
                                android:id="@+id/addEventTicketFreeButton"
                                android:layout_width="0dp"
                                android:layout_height="35dp"
                                app:layout_constraintTop_toBottomOf="@id/guideLineHorizontal5"
                                app:layout_constraintStart_toEndOf="@id/guideLineVertical3"
                                android:text="@string/freeHebrew"
                                android:background="@drawable/rounded_edit_text_yellow"
                                android:textAlignment="center"
                                android:textColor="@color/colorWhite"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:paddingStart="17dp"
                                android:layout_marginEnd="24dp"/>
                        <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                app:layout_constraintStart_toEndOf="@id/guideLineVertical"
                                app:layout_constraintTop_toBottomOf="@id/guideLineHorizontal5"
                                android:src="@drawable/ic_ticket_yellow"/>
                        <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                app:layout_constraintStart_toEndOf="@id/guideLineVertical"
                                app:layout_constraintTop_toBottomOf="@id/guideLineHorizontal6"
                                android:src="@drawable/ic_plus_green"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@id/guideLineHorizontal6"
                                app:layout_constraintStart_toEndOf="@id/guideLineVertical2"
                                android:text="בירה גולדסתאר | 7 ש'ח"
                                android:textSize="16sp"
                                android:textColor="@color/colorGreen"/>
                        <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                app:layout_constraintStart_toEndOf="@id/guideLineVertical"
                                app:layout_constraintTop_toBottomOf="@id/guideLineHorizontal7"
                                android:src="@drawable/ic_plus_white"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@id/guideLineHorizontal7"
                                app:layout_constraintStart_toEndOf="@id/guideLineVertical2"
                                android:text="הוספת מוצר נלווה"
                                android:textColor="@color/colorWhite"
                                android:textSize="16sp"/>
                        <Button
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/toPublishTicketAddMyEvent"
                                app:layout_constraintTop_toBottomOf="@id/guideLineHorizontal8"
                                android:background="@drawable/rounded_edit_text_green"
                                app:layout_constraintStart_toEndOf="@id/guideLineVertical2"
                                android:text="@string/publishEventHebrew"
                                android:textSize="18sp"
                                android:textColor="@color/colorPrimary"
                                android:textAlignment="center"
                                android:paddingEnd="5dp"
                                android:paddingStart="5dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:layout_marginBottom="40dp"
                                android:layout_marginEnd="60dp"
                                android:layout_marginStart="60dp"
                                app:layout_constraintEnd_toEndOf="parent"/>

                    </android.support.constraint.ConstraintLayout>

                </LinearLayout>

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>