<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layoutDirection="ltr"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">
    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/background_for_my_events_cell"
            android:background="@color/colorPrimary"
            app:layout_constraintTop_toTopOf="@+id/my_events_imageview"
            app:layout_constraintBottom_toBottomOf="@+id/my_events_imageview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0"/>
    <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp" app:srcCompat="@drawable/zebra"
            android:id="@+id/my_events_imageview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp" android:scaleType="centerCrop"/>
    <TextView
            android:text="560"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/numberOfParticipantsTextView"
            android:textColor="@color/colorYellow"
            app:layout_constraintTop_toTopOf="@+id/my_events_imageview"
            app:layout_constraintBottom_toBottomOf="@+id/my_events_imageview"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp" android:textSize="18sp"/>
    <TextView
            android:text=" פסטיבל ואקן"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/titleEventTextView"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/background_for_my_events_cell"
            app:layout_constraintEnd_toStartOf="@+id/my_events_imageview"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toEndOf="@+id/icParticipantsImageView"
            android:layout_marginStart="16dp"/>
    <ImageView
            android:layout_width="20dp"
            android:layout_height="37dp"
            android:src="@drawable/ic_participants"
            android:id="@+id/icParticipantsImageView"
            app:layout_constraintStart_toEndOf="@+id/numberOfParticipantsTextView" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/numberOfParticipantsTextView"
            app:layout_constraintBottom_toBottomOf="@+id/numberOfParticipantsTextView"/>
</android.support.constraint.ConstraintLayout>

