<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layoutDirection="ltr"
                                             android:layout_height="wrap_content">
    <ImageView
            android:layout_width="125dp"
            android:layout_height="0dp" app:srcCompat="@drawable/beer_upsale"
            android:id="@+id/imageView2" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintEnd_toEndOf="parent" android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="@+id/row_upsales_add_item_price_edittext"/>
    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/upsales_spinner" app:layout_constraintEnd_toStartOf="@+id/imageView2"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/row_upsales_item_description_edittext" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/upsales_spinner" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView2" android:hint="סוג בירה"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_constraintStart_toEndOf="@+id/row_upsale_add_or_save_button" android:layout_marginStart="8dp"/>
    <Button
            android:text="הוסף"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/row_upsale_add_or_save_button"
            app:layout_constraintTop_toTopOf="@+id/imageView2"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:id="@+id/row_upsales_add_item_price_edittext"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/row_upsales_item_description_edittext" android:hint="מחיר ליחידה"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/imageView2"
            android:textSize="16sp"
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:inputType="numberDecimal" android:singleLine="false"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/guideline7"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline7"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent="0.4"/>
    <TextView
            android:text="₪"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:id="@+id/row_upsales_shekel_sign"
            app:layout_constraintTop_toTopOf="@+id/row_upsales_add_item_price_edittext"
            app:layout_constraintBottom_toBottomOf="@+id/row_upsales_add_item_price_edittext"
            app:layout_constraintEnd_toStartOf="@+id/guideline7" android:layout_marginEnd="8dp"/>
</android.support.constraint.ConstraintLayout>