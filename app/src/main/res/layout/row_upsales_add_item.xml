<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layoutDirection="ltr"
                                             android:background="@color/colorPrimary"
                                             android:layout_height="wrap_content">
    <TextView
            android:text="₪"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/colorAccentLight"
            android:id="@+id/row_upsales_shekel_sign2"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/row_upsales_price_amount_on_event_textview"
            app:layout_constraintTop_toTopOf="@+id/row_upsales_price_amount_on_event_textview"
            app:layout_constraintBottom_toBottomOf="@+id/row_upsales_price_amount_on_event_textview"/>
    <TextView
            android:text="מחיר במקום"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/colorAccentLight"
            android:id="@+id/row_upsales_price_on_spot_title"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/row_upsales_seperator"
            app:layout_constraintTop_toTopOf="@+id/row_upsales_add_item_plus_imageview"/>
    <TextView
            android:text="מחיר בזיברו"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/colorGreen"
            android:id="@+id/row_upsales_price_on_zibro_title"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/row_upsales_seperator"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/row_upsales_price_on_spot_title"/>
    <TextView
            android:text="מחיר"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/colorGreen"
            android:id="@+id/row_upsales_price_on_zibro_actual_price_textview"
            app:layout_constraintTop_toBottomOf="@+id/row_upsales_price_amount_on_event_textview"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/row_upsales_price_on_zibro_title"
            android:layout_marginTop="8dp"/>
    <TextView
            android:text="₪"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/colorGreen"
            android:id="@+id/row_upsales_price_on_zibro_shekel"
            app:layout_constraintTop_toBottomOf="@+id/row_upsales_price_amount_on_event_textview"
            android:layout_marginTop="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/row_upsales_price_on_zibro_actual_price_textview"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/colorAccentLight"
            android:id="@+id/row_upsales_price_amount_on_event_textview"
            app:layout_constraintTop_toTopOf="@+id/row_upsales_add_item_plus_imageview"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/row_upsales_price_on_spot_title"
            android:text="מחיר"/>
    <TextView
            android:text="|"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/colorGreen"
            android:id="@+id/row_upsales_seperator"
            app:layout_constraintTop_toTopOf="@+id/row_upsales_add_item_plus_title_textview"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/row_upsales_add_item_separator_gl"
            app:layout_constraintBottom_toBottomOf="@+id/row_upsales_add_item_plus_title_textview"/>
    <TextView
            android:text="שם המוצר"
            android:textColor="@color/colorGreen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:maxLines="2"
            android:id="@+id/row_upsales_add_item_plus_title_textview"
            app:layout_constraintTop_toTopOf="@+id/row_upsales_add_item_plus_imageview"
            app:layout_constraintBottom_toBottomOf="@+id/row_upsales_add_item_plus_imageview"
            app:layout_constraintEnd_toStartOf="@+id/row_upsales_add_item_plus_imageview"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/row_upsales_add_item_separator_gl"
    />
    <ImageView
            android:layout_width="38dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_plus_green"
            android:id="@+id/row_upsales_add_item_plus_imageview" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/xsign"
            app:layout_constraintTop_toTopOf="@+id/row_upsales_price_amount_on_event_textview"
            app:layout_constraintEnd_toEndOf="@+id/row_upsales_price_amount_on_event_textview"
            app:layout_constraintBottom_toBottomOf="@+id/row_upsales_price_amount_on_event_textview"
            app:layout_constraintStart_toStartOf="@+id/row_upsales_price_amount_on_event_textview"
            android:scaleType="fitXY"
            android:id="@+id/row_upsales_add_item_x"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/row_upsales_add_delete_button" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            style="@style/Widget.AppCompat.Button.Small" android:text="מחק"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/row_upsales_add_item_separator_gl"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent="0.61"/>
</android.support.constraint.ConstraintLayout>