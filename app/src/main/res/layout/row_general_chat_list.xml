<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layoutDirection="ltr"
                                             android:layout_height="wrap_content">

    <android.support.v7.widget.CardView android:layout_width="74dp"
                                        android:layout_height="74dp" app:layout_constraintEnd_toEndOf="parent"
                                        android:layout_marginEnd="16dp"
                                        app:cardCornerRadius="37dp"
                                        app:layout_constraintTop_toTopOf="parent"

                                        android:id="@+id/cardView" android:layout_marginBottom="8dp"
                                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp">
        <android.support.v7.widget.AppCompatImageView android:layout_width="74dp"
                                                      android:id="@+id/chat_list_imageview"
                                                      android:layout_height="74dp"
                                                      android:scaleType="centerCrop" app:srcCompat="@drawable/zebra"/>
    </android.support.v7.widget.CardView>
    <TextView
            android:text="שם אירוע"
            android:textSize="25dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/chat_list_event_title_textview"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/cardView" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/cardView" android:layout_marginTop="8dp"/>
    <TextView
            android:text="שעה וזה"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView5"/>
    <TextView
            android:text="הודעה"
            android:layout_width="0dp"
            android:layout_height="19dp"
            android:id="@+id/textView5"
            app:layout_constraintStart_toEndOf="@+id/textView4" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/cardView"
            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/cardView"/>
</android.support.constraint.ConstraintLayout>